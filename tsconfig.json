{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/data/*": ["data/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/hook/*": ["hooks/*"],
      "@/services/*": ["services/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
